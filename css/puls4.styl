azul = #22BCE0
gris_oscuro = #444
naranja=#DD4F24

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

header
	background gris_oscuro
	color white
	padding 0.5em
	position relative

	.logo
		border-right 1px solid azul
		width 60px
		float left

		img
			width 50px
			border-radius 50%
	
	.titular
		margin 0 80px 0 70px
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding	0
	.usuario
		position absolute
		right 10px
		top 10px

		.avatar
			img
				width 50px
				border-radius 50%

		.flechita
			background naranja
			color white
			display block
			position absolute
			text-align right
			width 2em
			top 0

nav
	background azul



